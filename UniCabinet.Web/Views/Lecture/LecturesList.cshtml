@model IEnumerable<UniCabinet.Web.ViewModel.Lecture.LectureViewModel>

<h2>Лекции по "@ViewBag.Discipline"</h2>

<button type="button" class="btn btn-primary" onclick="openModal('/Lecture/LectureAddModal', 'addLectureModal', @ViewBag.DisciplineDetaildId)">
    Добавить лекцию
</button>

<table class="table">
    <thead>
        <tr>
            <th>
                Номер лекции
            </th>
            <th>
                Дата проведения
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Number
                </td>
                <td>
                    @item.Date.ToString("yyyy-MM-dd HH:mm")
                </td>
                <td>
                    <button type="button" class="btn btn-primary" onclick="openModal('/Lecture/LectureEditModal', 'editLectureModal', @item.Id)">
                        Редактировать
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div id="modalContainer"></div>

