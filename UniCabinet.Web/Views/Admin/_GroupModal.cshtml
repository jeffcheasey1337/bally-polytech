@model UniCabinet.Web.ViewModel.User.UserGroupViewModel

<div class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Заголовок модального окна -->
            <div class="modal-header">
                <h5 class="modal-title">Изменить группу для @Model.FullName</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>
            <!-- Тело модального окна -->
            <div class="modal-body">
                <form asp-action="UpdateUserGroup">
                    <input type="hidden" name="UserId" value="@Model.UserId" />
                    <div class="mb-3">
                        <label for="groupSelect">Выберите новую группу:</label>
                        <select name="GroupId" class="form-select">
                            @foreach (var group in Model.AvailableGroups)
                            {
                                <option value="@group.Value">@group.Text</option>
                            }
                        </select>
                    </div>
                    <!-- Подвал модального окна -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                        <button type="submit" class="btn btn-primary">Сохранить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
